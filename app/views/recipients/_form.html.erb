<%# recipient %>
<%= simple_form_for @recipient do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :telephone %>
  <%= f.input :neighbourhood %>
  <%= f.input :postcode %>
  <%= f.input :payment_type,
        as: :radio_buttons,
        collection: ["Paypal", "Bank Transfer", "Cash", "Can't currently afford it"] %>
  <%= f.input :support_type,
        as: :checkboxes,
        collection: ["Food/Supplies Delivery", "Prescription Collection"] %>
  <%= f.button :submit %>
<% end %>
